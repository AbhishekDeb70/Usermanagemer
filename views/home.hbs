<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ AddUser</a>
  </div>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user|}}
    <tr>
      <th scope="row">{{user.id}}</th>

      <td>{{user.First_name}}</td>
      <td>{{user.Last_name}}</td>
      <td>{{user.email}}</td>
      <td>{{user.phone}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edit-user/{{user.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <button  onclick="confirmDelete({{this.id}})" class="btn btn-light btn-small"><i
            class="bi bi-person-x"></i> Delete</button>
        <script>
          function confirmDelete(id) {
            let text;
            console.log(id);
            if (confirm("Are you sure you want to Delete?") == true) {
              window.location.href='/del/'+id
              text = "You pressed OK!";
            } else {
              alert("canceled")
            }
          }
        </script>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
<div class="page">
  {{#if prevPage}}
  <a href="/{{prevpage}}" type="button" class="">Prev...</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
    href="/{{currentPage}}" style="pointer-events: none" type="button">...Next</a>
  {{/if}}
  {{#if nextpage}}
  <a href="/{{prevpage}}" type="button" style="pointer-events: none"
    class="">Prev...</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/{{currentPage}}" type="button">...Next</a>
  {{/if}}
  {{#if midpage}}
  <a href="/{{prevpage}}" type="button" class="">Prev...</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
    href="/{{currentPage}}" type="button">...Next</a>
  {{/if}}

</div>